{
	"name": "skiddoserver-lib",
	"version": "0.0.1",
	"description": "Node server with zero dependencies",
	"main": "dist/index.js",
	"type": "module",
	"scripts": {
		"build": "tsc",
		"start": "node dist/index.js",
		"dev:tsc": "tsc --watch --preserveWatchOutput",
		"dev:node": "node --enable-source-maps --watch dist/index.js",
		"dev:node:debug": "node --enable-source-maps --inspect --watch dist/index.js",
		"dev": "pnpm run \"/dev:(tsc|node)/\"",
		"debug": "pnpm run \"/dev:(tsc|node:debug)/\""
	},
	"keywords": [],
	"author": "Sergio Malagón Martín",
	"license": "MIT",
	"devDependencies": {
		"@types/node": "20.11.25",
		"prettier": "3.2.5",
		"typescript": "5.4.2"
	},
	"types": "index.d.ts"
}
