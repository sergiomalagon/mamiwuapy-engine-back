{
  "name": "smoll",
  "version": "0.3.0",
  "description": "Node library for server creation with routing",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "type": "module",
  "files": [
    "LICENSE",
    "README.md",
    "lib"
  ],
  "engines": {
    "node": ">=20"
  },
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "default": "./lib/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev:tsc": "tsc --watch --preserveWatchOutput",
    "dev:node": "node --enable-source-maps --watch dist/index.js",
    "dev:node:debug": "node --enable-source-maps --inspect --watch dist/index.js",
    "dev": "pnpm run \"/dev:(tsc|node)/\"",
    "debug": "pnpm run \"/dev:(tsc|node:debug)/\""
  },
  "keywords": [
    "server",
    "node",
    "javascript",
    "minimal"
  ],
  "author": "Sergio Malagón Martín",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sergiomalagon/smoll.git"
  },
  "bugs": {
    "url": "https://github.com/sergiomalagon/smoll/issues"
  },
  "homepage": "https://github.com/sergiomalagon/smoll#readme",
  "devDependencies": {
    "@types/node": "20.11.25",
    "typescript": "5.4.2"
  }
}
