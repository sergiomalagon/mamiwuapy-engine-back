{
  "name": "smoll-webserver",
  "version": "0.2.0",
  "description": "Node tools to help you create servers without abstractions",
  "main": "dist/lib/index.js",
  "types": "dist/lib/index.d.ts",
  "type": "module",
  "files": [
    "LICENSE",
    "README.md",
    "lib",
    "dist"
  ],
  "engines": {
    "node": ">=20"
  },
  "exports": {
    ".": {
      "types": "./dist/lib/index.d.ts",
      "import": "./dist/lib/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev:tsc": "tsc --watch --preserveWatchOutput",
    "dev:node": "node --enable-source-maps --watch dist/index.js",
    "dev:node:debug": "node --enable-source-maps --inspect --watch dist/index.js",
    "dev": "pnpm run \"/dev:(tsc|node)/\"",
    "debug": "pnpm run \"/dev:(tsc|node:debug)/\""
  },
  "keywords": [
    "server",
    "node",
    "typescript",
    "minimal"
  ],
  "author": "Sergio Malagón Martín",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sergiomalagon/smoll-webserver.git"
  },
  "bugs": {
    "url": "https://github.com/sergiomalagon/smoll-webserver/issues"
  },
  "homepage": "https://github.com/sergiomalagon/smoll-webserver#readme",
  "devDependencies": {
    "@types/node": "20.11.25",
    "prettier": "3.2.5",
    "typescript": "5.4.2"
  }
}
