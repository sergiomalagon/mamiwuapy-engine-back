{
  "compilerOptions": {
    // Base options
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    // Strictness
    "strict": true,
    // Transpiling
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "outDir": "dist",
    "lib": ["ES2022"],
  },
  "include": ["lib/smoll.d.ts", "__tests__/**/*"]
}
