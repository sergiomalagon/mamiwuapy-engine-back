{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "outDir": "dist",
    "lib": ["ES2022"],
    "declaration": true,
    "sourceMap": true,
    "incremental": true,
  },
  "include": ["lib/**/*", "tests/**/*"],
}
